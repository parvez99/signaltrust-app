{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "rootDir": "../../",
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": [
    "../../core/**/*.ts",
    "../../infra/**/*.ts",
    "src/**/*.ts"
  ]
}